mixin editWork(heading, fileStatus, hiddenORshowed)
	.edit-block
		.container.section(id='padding-big')
			.row
				.col-sm-10.col-sm-push-1.flex-direction-column

					.heading.heading--black
						= heading

					+inputNamed('Название', 'text', 'name', 'border: 1px solid lightgrey', 'Введите имя..', 'none')

					div
						.info__element.info__element--userName
							| Изображение
					p
						| Изображение jpg или png, рекомендуемая ширина 945px и больше, высота от 400px и более, вес до 2Мб.
					div
						.flex-direction-row.flex-start
							+button('#', 'button--userInfo', 'Выбрать файл')
							.color-greyLight
								= fileStatus
					img(src='./img/blog/yosemite-national-park.jpg', width='25%', class= hiddenORshowed)

					+textareaNamed('Содержание', 'text', 'name', 'border: 1px solid lightgrey', 'Введите город..', 'none')
					+textareaNamed('Содержание', 'text', 'name', 'border: 1px solid lightgrey', 'Введите город..', 'none')
					+textareaNamed('Содержание', 'text', 'name', 'border: 1px solid lightgrey', 'Введите город..', 'none')

					.flex-direction-row.flex-start
						+dataEditForm('Ссылка на проект', 'text', 'name', 'border: 1px solid lightgrey', 'Введите имя..', 'hidden')
						+dataEditForm('Ссылка на GitHub', 'text', 'name', 'border: 1px solid lightgrey', 'Введите имя..', 'hidden')

					div
						+buttonArrowLeft('#')
						+buttonArrowRight('#')